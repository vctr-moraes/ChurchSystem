@model ChurchSystem.App.ViewsModels.GroupViewModel

<style>
    [data-position="right center"][data-tooltip]:after{
        color: red;
        font-weight: bold;
    }
</style>

@{
    ViewData["Title"] = "Delete group";
}

<h3 class="ui header">
    <i class="users icon"></i>
    Delete group
</h3>

<div class="ui divider"></div>

<div class="ui segment">
    <div class="ui relaxed divided list">
        <div class = "item">
            <div class="content">
                <div class="header">
                    @Html.DisplayNameFor(model => model.Description)
                </div>
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <a class="ui button" asp-action="Index">
        <i class="arrow left icon"></i>
        Back
    </a>
    <button type="submit" class="ui red button" data-tooltip="Are you sure you want to delete this?" data-position="right center">
        <i class="trash alternate outline icon"></i>
        Delete
    </button>
</form>
