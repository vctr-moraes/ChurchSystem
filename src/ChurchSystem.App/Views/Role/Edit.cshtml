@model ChurchSystem.App.ViewsModels.RoleViewModel

@{
    ViewData["Title"] = "Edit role";
}

<h3 class="ui header">Edit role</h3>

<div class="ui divider"></div>
<partial name="/Views/Components/_ValidationSummary.cshtml" />

<form asp-action="Edit" class="ui form segment">
    @{ await Html.RenderPartialAsync("_RoleFormPartial.cshtml"); }
    <input type="hidden" asp-for="Id" />
    <a class="ui button" asp-action="Index">
        <i class="arrow left icon"></i>
        Back
    </a>
    <button type="submit" class="ui submit primary button">
        <i class="check icon"></i>
        Save
    </button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
